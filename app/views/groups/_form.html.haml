- if @group.errors.any?
  %ul
    - @group.errors.full_messages.each do |msg|
      %li
        = msg

= form_for @group do |f|
  %div.form-group
    %div.form-group.string.optional
      = f.label "title", :class => "string optinoal control-label"
      = f.text_field :title, :class => "string optional form-control"
    %div.form-group.string.optional
      = f.label "description", :class => "string optional control-label"
      = f.text_area :description, :class => "string optinoal form-control"

  = f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." }